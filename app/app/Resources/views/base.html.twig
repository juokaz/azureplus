<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{% block title %}Azure+{% endblock %}</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le styles -->
    {% stylesheets '@CloudBundle/Resources/public/css/*' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
  </head>

  <body>

    <div class="topbar">
      <div class="fill">
        <div class="container">
          <h3><a href="{{ path('CloudBundle_homepage') }}">Azure+</a></h3>
            <ul>
                <li><a href="{{ path('CloudBundle_homepage') }}">Home</a></li>
                <li><a href="{{ path('CloudBundle_manage') }}">Apps</a></li>
                <li><a href="{{ path('CloudBundle_todo') }}">ToDo</a></li>
            </ul>
          {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <ul class="nav secondary-nav">
              <li class="menu">
                <a href="#" class="menu">{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</a>
                <ul class="menu-dropdown">
                    <li><a href="{{ path('fos_user_security_logout') }}">
                        {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                    </a></li>
                </ul>
              </li>
            </ul>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="container">

      <div class="hero-unit">
        {% for key, message in app.session.getFlashes() %}
            <div class="alert-message {{ key }}">
              <a class="close" href="#">Ã—</a>
              <p>{{ message }}</p>
            </div>
        {% endfor %}

        {% block content %}{% endblock %}
      </div>

      <footer>
        <p><img src="{{ asset('bundles/cloud/images/webspecies.png') }}" alt="Web Species" /> &copy; <a href="http://webspecies.co.uk/">Web Species Ltd</a> 2011</p>
      </footer>

    </div> <!-- /container -->

    {% javascripts '@CloudBundle/Resources/public/js/jquery-1.5.2.min.js' '@CloudBundle/Resources/public/js/application.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-21529043-5']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>
  </body>
</html>
